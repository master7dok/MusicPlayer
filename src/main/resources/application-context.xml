<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/spring-context.xsd
       http://www.springframework.org/schema/context">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>
    <bean id="typeMusic1"
          class="com.mbdev.ClassicMusic">
    </bean>
    <bean id="typeMusic2"
          class="com.mbdev.RapMusic">
    </bean>
    <bean id="typeMusic3"
          class="com.mbdev.RockMusic">
    </bean>

    <bean id="MusicPlayer" class="com.mbdev.MusicPlayer" scope="prototype">
        <property name="musicList">
            <list>
                <ref bean="typeMusic1"></ref>
                <ref bean="typeMusic2"></ref>
                <ref bean="typeMusic3"></ref>
            </list>
        </property>
        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>
</beans>
